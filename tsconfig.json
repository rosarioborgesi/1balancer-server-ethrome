{
    "compilerOptions": {
      "target": "ES2022",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "removeComments": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
  "moduleResolution": "node",
  "ignoreDeprecations": "6.0",
  "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": false
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }